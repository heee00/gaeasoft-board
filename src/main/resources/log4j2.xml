<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p [%c{1}] - %m%n" />
        </Console>
         <RollingFile name="File" fileName="D:/workspace/sts3-workspace/Board/logs/application.log" filePattern="D:/workspace/sts3-workspace/Board/logs/application-%d{yyyyMMdd}.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p [%c{1}] - %m%n" charset="UTF-8"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
             <DefaultRolloverStrategy>
                <Delete basePath="D:/workspace/sts3-workspace/Board/logs" maxDepth="1">
                    <IfFileName glob="application-*.log">
                        <IfLastModified age="7d"/>
                    </IfFileName>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="com.gaeasoft.project" level="info" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>
        <Logger name="com.gaeasoft.project.batch" level="error" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="org.quartz" level="info">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="com.gaeasoft.project.util" level="info"  additivity="false">
	        <AppenderRef ref="Console" />
	       	<AppenderRef ref="File"/>
        </Logger>
        <Root level="warn">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
